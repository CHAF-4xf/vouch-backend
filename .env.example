# ═══════════════════════════════════════════
# VOUCH Backend — Environment Configuration
# Copy to .env and fill in your values
# ═══════════════════════════════════════════

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/vouch

# Redis (rate limiting + cache)
REDIS_URL=redis://localhost:6379

# ECDSA Signing Key (secp256k1 private key, hex encoded, no 0x prefix)
# Generate with: npm run generate-keys
ECDSA_PRIVATE_KEY=

# Encryption Key (32 bytes hex for AES-256-GCM)
# Generate with: npm run generate-keys
ENCRYPTION_KEY=

# JWT (RS256 — paste full PEM strings, use \n for newlines)
# Generate with: npm run generate-keys
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# Blockchain (Sepolia Testnet)
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
RPC_URL_FALLBACK=https://sepolia.infura.io/v3/YOUR_KEY
REGISTRY_CONTRACT_ADDRESS=
RULE_REGISTRY_CONTRACT_ADDRESS=
DEPLOYER_PRIVATE_KEY=

# Stripe (stubbed for now)
STRIPE_SECRET_KEY=sk_test_stub
STRIPE_WEBHOOK_SECRET=whsec_stub

# Sentry (optional)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PROVE=60
RATE_LIMIT_AUTH=5
RATE_LIMIT_DASHBOARD=30
RATE_LIMIT_PUBLIC=120

# Batch Job
BATCH_INTERVAL_MINUTES=10
BATCH_MAX_SIZE=500

# CORS
CORS_ORIGIN=https://getvouched.ai
